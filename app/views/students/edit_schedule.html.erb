<h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Edit My Schedule</h2>

  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Sunday</h2>
  <div>
    <% @schedule[:sun].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Monday</h2>
  <div>
    <% @schedule[:mon].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Tuesday</h2>
  <div>
    <% @schedule[:tue].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Wednesday</h2>
  <div>
    <% @schedule[:wed].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Thursday</h2>
  <div>
    <% @schedule[:thu].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Friday</h2>
  <div>
    <% @schedule[:fri].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>
  <h2 class="mt-6 text-2xl tracking-tight text-gray-900">Saturday</h2>
  <div>
    <% @schedule[:sat].each do |period| %>
         <li><%= period.begin.hour %>:<%= period.begin.min %> - <%= period.last.hour %>:<%= period.last.min %></li>
    <% end %>
  </div>

  <div class="mt-5 md:col-span-2 md:mt-0">
    <%= form_tag update_schedule_path(), :class => 'form' do %>
      <div class="overflow-hidden shadow sm:rounded-md">
        <div class="bg-white px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
                <%= label :timeblock, :weekday, 'Day', class: 'col-form-label'  %>
                <%= select :timeblock, :weekday, ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"], {}, {class: 'form-control col-1'} %>
            </div>
            <div class="col-span-6 sm:col-span-3">
              <%= label :timeblock, :busy_start, 'Start time', :class => 'block text-sm font-medium text-gray-700' %>
              <%= time_select :timeblock, :busy_start, :class => 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', :ampm => true %>
            </div>
            <div class="col-span-6 sm:col-span-3">
              <%= label :event, :busy_end, 'End time', :class => 'block text-sm font-medium text-gray-700' %>
              <%= time_select :timeblock, :busy_end, :class => 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', :ampm => true %>
            </div>

          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
          <%= submit_tag 'Add Busy Timeblock', :class => 'inline-flex justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2' %>
          <%= link_to 'Done', show_schedule_path(), :class => 'inline-flex justify-center rounded-md border border-transparent bg-blue-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Logout", organization_logout_path, 'data-method' => 'post', :class => "text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mt-6 mr-2 mb-4 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"%>
