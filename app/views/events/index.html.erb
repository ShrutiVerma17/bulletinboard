<h2>All Events</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="events">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Date and Time</th>
      <th>Location</th>
      <th>Tags</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.name %>
        </td>
        <td>
          <%= event.datetime %>
        </td>
        <td>
          <%= event.location %>
        </td>
        <td>
          <%= event.tags %>
        </td>
        <td>
          <%= link_to "More about #{event.name}", event_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
